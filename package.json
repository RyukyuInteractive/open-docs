{
  "name": "open-docs",
  "type": "module",
  "private": true,
  "scripts": {
    "format": "biome check . --fix --unsafe",
    "claude": "claude --continue --dangerously-skip-permissions --mcp-config .mcp.json",
    "start": "bun run index",
    "build": "bun run --cwd packages/docs-router build && bun run --cwd packages/docs-client build",
    "dev:client": "bun run --cwd packages/docs-client dev",
    "dev:server": "bun run --cwd packages/docs-router dev",
    "dev": "bun run index.dev"
  },
  "workspaces": [
    "packages/docs-client",
    "packages/docs-router",
    "packages/docs"
  ],
  "dependencies": {
    "@hono/node-server": "^1.14.4",
    "@modelcontextprotocol/sdk": "^1.13.0",
    "hono": "^4.8.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/bun": "^1.2.16",
    "@types/node": "^24",
    "@typescript/native-preview": "^7.0.0-dev.20250617.1",
    "concurrently": "^9.1.2",
    "esbuild": "^0.25.5",
    "typescript": "^5.8.3"
  }
}
