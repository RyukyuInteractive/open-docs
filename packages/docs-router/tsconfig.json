{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "rootDir": "lib",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["lib/**/*.ts"],
  "references": [{ "path": "../docs" }]
}
