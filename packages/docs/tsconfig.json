{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "outDir": "build",
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "composite": true
  },
  "include": ["lib/**/*.ts"],
  "exclude": ["lib/**/*.test.ts"]
}
